@model IEnumerable<GoingOnce.Models.AuctionItem>

@{
    ViewBag.Title = "Index";
}

<h2>Auction Item</h2>

<p>
    @Html.ActionLink("Create New", "Create", new object { }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Enter Bids", "EnterBidInfo", "AuctionItem", new object { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-hover dataTables-example">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartBid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountBid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumBids)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuctionType)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td style="max-width: 200px;">
            @Html.DisplayFor(modelItem => item.ItemDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartBid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountBid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumBids)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuctionType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
}
